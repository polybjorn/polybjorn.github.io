---
import Layout from '../../layouts/Layout.astro';
const lang = 'en';
---

<Layout lang={lang} title="Found – Bjørn A. Andersen" description="Personal photography and free time captures by Bjørn A. Andersen.">

  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      background: #1e2228;
      color: #dde1e7;
      font-family: 'Piazzolla', serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .wrap {
      max-width: 1600px;
      width: 100%;
      padding: 2rem 1.5rem 4rem;
    }
    .back {
      display: inline-block;
      margin-bottom: 2rem;
      color: #888;
      text-decoration: none;
      font-size: 0.85rem;
      letter-spacing: 0.05em;
      transition: color 0.2s;
    }
    .back:hover { color: #fff; }
    .empty {
      text-align: center;
      color: #555;
      margin-top: 6rem;
      font-size: 1rem;
    }
  </style>

  <main>
    <div class="wrap">
    <div style="display:flex;justify-content:center;gap:3rem;margin-bottom:2rem;">
      <a class="back" href="/">← Back</a>
      <a class="back" href="/gallery/made">Made →</a>
    </div>
    <h1 class="sr-only">Found</h1>
      <div class="empty">Coming soon.</div>
      <div style="display:flex;justify-content:center;gap:3rem;padding:2rem 0 3rem;">
        <a class="back" href="/">← Back</a>
        <a class="back" href="#" onclick="window.scrollTo({top:0,behavior:'smooth'});return false;">↑ Top</a>
        <a class="back" href="/gallery/made">Made →</a>
      </div>
    </div>
  </main>

</Layout>

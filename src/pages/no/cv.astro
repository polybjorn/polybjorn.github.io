---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../data/translations.js';
import { cv } from '../../data/cv.js';

const lang = 'no';
const tr = t[lang];
---

<Layout lang={lang} title="CV – Bjørn A. Andersen" description="Curriculum vitae for Bjørn A. Andersen — 3D-modellering, additiv produksjon, grafisk design og kurs i 3D-printing.">
  

  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

    body {
      background: #1e2228;
      color: #eef0f3;
      font-family: 'Piazzolla', serif;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .cv-wrap {
      max-width: 720px;
      width: 100%;
      padding: 4rem 2rem 6rem;
    }

    .cv-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1.5rem;
      gap: 2rem;
    }

    .cv-avatar {
      width: 130px;
      height: 130px;
      border-radius: 50%;
      object-fit: cover;
      flex-shrink: 0;
    }

    .back {
      display: inline-block;
      margin-bottom: 2rem;
      color: #555;
      text-decoration: none;
      font-size: 0.85rem;
      letter-spacing: 0.05em;
      transition: color 0.2s;
    }
    .back:hover { color: #fff; }

    h1 {
      font-family: 'Piazzolla', serif;
      font-size: 2.2rem;
      color: #fff;
      margin-bottom: 0.2rem;
    }

    .cv-sub {
      color: #8a8f99;
      font-size: 0.85rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }

    section {
      margin-bottom: 3rem;
      margin-top: 1.5rem;
    }

    h2 {
      font-family: 'Piazzolla', serif;
      font-size: 1.1rem;
      font-weight: normal;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: #888;
      border-bottom: 1px solid #2a2e35;
      padding-bottom: 0.5rem;
      margin-bottom: 1.5rem;
    }

    .entry {
      display: grid;
      grid-template-columns: 120px 1fr;
      gap: 0.5rem 1.5rem;
      margin-bottom: 1.5rem;
    }

    .period {
      color: #8a8f99;
      font-size: 0.85rem;
      padding-top: 0.15rem;
    }

    .entry-content .title {
      color: #fff;
      font-weight: bold;
      font-size: 1rem;
    }

    .entry-content .org {
      color: #8a8f99;
      font-size: 0.9rem;
      margin-bottom: 0.3rem;
    }

    .entry-content .desc {
      color: #dde1e7;
      font-size: 0.9rem;
      line-height: 1.6;
    }

    .skills-list {
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .skills-list li {
      background: #2a2e35;
      color: #eef0f3;
      font-size: 0.85rem;
      padding: 0.3rem 0.8rem;
      border-radius: 4px;
    }

    .software-group {
      margin-bottom: 1.5rem;
    }

    .software-group h3 {
      font-size: 0.8rem;
      letter-spacing: 0.06em;
      text-transform: uppercase;
      color: #8a8f99;
      margin-bottom: 0.6rem;
      font-weight: normal;
    }

    .software-list {
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .software-list li {
      background: #2a2e35;
      color: #eef0f3;
      font-size: 0.8rem;
      padding: 0.25rem 0.7rem;
      border-radius: 4px;
    }

    .references {
      color: #8a8f99;
      font-size: 0.8rem;
      letter-spacing: 0.05em;
      text-align: center;
      margin-top: 2rem;
    }

    @media (max-width: 480px) {
      .entry {
        grid-template-columns: 1fr;
        gap: 0.2rem;
      }
      .period {
        font-size: 0.8rem;
      }
      .cv-wrap {
        padding: 2rem 1.5rem 4rem;
      }
    }
  </style>

  <div class="cv-wrap">
    <a class="back" href="/no">← Tilbake</a>
    <div class="cv-header">
      <div>
        <h1>Bjørn A. Andersen</h1>
        <p class="cv-sub">{tr.cv_title}</p>
      </div>
      <img
        class="cv-avatar"
        src="https://res.cloudinary.com/djpkffk5u/image/upload/v1772287930/profile-img_pr1q8o.png"
        alt="Bjørn A. Andersen"
      />
    </div>

    <section>
      <h2>{tr.experience}</h2>
      {cv.experience.map(entry => (
        <div class="entry">
          <div class="period">{entry.period}</div>
          <div class="entry-content">
            <div class="title">{entry[lang].title}</div>
            <div class="org">{entry[lang].org}</div>
            <div class="desc">{entry[lang].desc}</div>
          </div>
        </div>
      ))}
    </section>

    <section>
      <h2>{tr.education}</h2>
      {cv.education.map(entry => (
        <div class="entry">
          <div class="period">{entry.period}</div>
          <div class="entry-content">
            <div class="title">{entry[lang].title}</div>
            <div class="org">{entry[lang].org}</div>
          </div>
        </div>
      ))}
    </section>

    <section>
      <h2>{tr.skills}</h2>
      <ul class="skills-list">
        {cv.skills[lang].map(skill => (
          <li>{skill}</li>
        ))}
      </ul>
    </section>

    <section>
      <h2>{tr.software}</h2>
      {Object.entries(cv.software[lang]).map(([group, items]) => (
        <div class="software-group">
          <h3>{group}</h3>
          <ul class="software-list">
            {items.map(item => <li>{item}</li>)}
          </ul>
        </div>
      ))}
    </section>

    <p class="references">{tr.references}</p>
  </div>
</Layout>